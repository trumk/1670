@model IEnumerable<buoi22.Models.Employee>
@{
    ViewData["Title"] = "Home Page";
}

<h4>List of employees</h4>
<p>
    <a asp-action="New" class="btn btn-sm btn-primary">Add new</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Profile Pic</th>
            <th>Full Name</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Salary</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>
                    <img src="/image/@employee.ProfilePicture" class="rounded-cycle" height="100" width="100" />
                </td>
                <td>
                    @employee.FirstName @employee.LastName
                </td>
                <td>@employee.Age</td>
                <td>@employee.Gender</td>
                <td>@employee.Salary</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-sm btn-info">Edit</a>
                    <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger"
                       onclick="return confirm('Are you sure you want to delete this employee?');">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
